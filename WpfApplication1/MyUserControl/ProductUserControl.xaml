<baseUserControl:BaseUserControl 
             x:Class="WpfApplication1.MyUserControl.ProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1.MyUserControl"
             xmlns:baseUserControl="clr-namespace:WpfApplication1.MyUserControl"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="productIdTxtB" Text="{Binding Product.Id}" Grid.Row="0" Grid.Column="0"/>
        <TextBlock x:Name="productNameTxtB" Text="{Binding Product.Name}" Grid.Row="0" Grid.Column="1"/>
        <TextBlock x:Name="productPriceTxtB" Text="{Binding Product.Price}" Grid.Row="0" Grid.Column="2"/>
    </Grid>
</baseUserControl:BaseUserControl>
