<baseUserControl:BaseUserControl 
             x:Class="WpfApplication1.MyUserControl.ClientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1.MyUserControl"
             xmlns:baseUserControl="clr-namespace:WpfApplication1.MyUserControl"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="clientIdTxtB" Text="{Binding Client.Id}" Grid.Row="0" Grid.Column="0"/>
        <TextBlock x:Name="clientNameTxtB" Text="{Binding Client.Name}" Grid.Row="0" Grid.Column="1"/>
        <TextBlock x:Name="clientSurnameTxtB" Text="{Binding Client.Surname}" Grid.Row="0" Grid.Column="2"/>
        <TextBlock x:Name="clientMoneyTxtB" Text="{Binding Client.Money}" Grid.Row="0" Grid.Column="3"/>
    </Grid>
</baseUserControl:BaseUserControl>
